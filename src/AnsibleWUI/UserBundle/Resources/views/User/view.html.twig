{% extends ':Layout:layout.html.twig' %}

{% block content_title %}
    Users
{% endblock %}

{% block content_body %}
    <div class="box box-primary">
        <div class="box-header">
            <h4>{{ user.lastname }} {{ user.firstname }}</h4>
            <div class="box-tools pull-right btn-group">
                <a href="{{ path('ansible_wui_user_list') }}" class="btn btn-flat btn-default">
                    <i class="fa fa-list"></i>
                </a>
                <a href="{{ path('ansible_wui_user_edit', { 'id': user.id }) }}" class="btn btn-flat btn-warning">
                    <i class="fa fa-pencil"></i>
                </a>
                <a href="{{ path('ansible_wui_user_delete', { 'id': user.id }) }}" class="btn btn-flat btn-danger">
                    <i class="fa fa-trash"></i>
                </a>
            </div>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-sm-2">Last name</div>
                <div class="col-sm-10">{{ user.lastname }}</div>
            </div>
            <div class="row">
                <div class="col-sm-2">First name</div>
                <div class="col-sm-10">{{ user.firstname }}</div>
            </div>
            <div class="row">
                <div class="col-sm-2">User name</div>
                <div class="col-sm-10">{{ user.username }}</div>
            </div>
            <div class="row">
                <div class="col-sm-2">Email</div>
                <div class="col-sm-10">{{ user.email }}</div>
            </div>
            <div class="row">
                <div class="col-sm-2">Roles</div>
                <div class="col-sm-10">{{ user.roles|join(', ') }}</div>
            </div>
            <div class="row">
                <div class="col-sm-2">Last login</div>
                <div class="col-sm-10">{{ user.lastLogin }}</div>
            </div>
            <div class="row">
                <div class="col-sm-2">Enabled</div>
                <div class="col-sm-10">{{ user.enabled ? 'Yes' : 'No' }}</div>
            </div>

        </div>
    </div>
{% endblock %}