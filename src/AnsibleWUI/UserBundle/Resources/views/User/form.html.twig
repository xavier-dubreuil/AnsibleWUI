{% extends ':Layout:layout.html.twig' %}

{% block content_title %}
    Users
{% endblock %}

{% block content_body %}
    <div class="box box-primary">
        <div class="box-header">
            {% if user is null %}New User{% else %}{{ user.username }}{% endif %}
        </div>
        <div class="box-body">
            {{ form_start(form) }}
                {{ form_row(form.username) }}
                {{ form_row(form.email) }}
                {{ form_row(form.lastname) }}
                {{ form_row(form.firstname) }}
                {{ form_row(form.enabled) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}