{% extends ':Layout:layout.html.twig' %}

{% set module = 'host' %}

{% block content_title %}
    Hosts
{% endblock %}

{% block content_body %}
    <div class="box box-primary">
        <div class="box-header">
            {% if entity is null %}New Host{% else %}{{ entity.name }}{% endif %}
        </div>
        <div class="box-body">
            {{ form_start(form) }}
                {{ form_row(form.name) }}
                {{ form_row(form.ip_address) }}
                {{ form_row(form.submit) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}